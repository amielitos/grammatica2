rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /users/{userId}/{fileId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow public read access for media files specifically for profile pictures
    match /users/{userId}/profile_pic.jpg {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /users/{userId}/profile_pic.jpeg {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /users/{userId}/profile_pic.png {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    // Rules for educator applications
    match /educator_applications/{fileName} {
      allow read: if request.auth != null; // Admins need to read, and applicants might want to see theirs
      allow write: if request.auth != null; // Any authenticated user can apply
    }

    // Rules for spelling bee audio files
    match /spelling_audio/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
